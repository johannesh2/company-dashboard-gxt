<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

    <!-- Servlets -->
    <servlet>
      <servlet-name>companyDataServiceImpl</servlet-name>
      <servlet-class>
        com.vaadin.example.gxt.companydashboard.server.CompanyDataServiceImpl
      </servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>companyDataServiceImpl</servlet-name>
      <url-pattern>/CompanyDashboard/companyData</url-pattern>
    </servlet-mapping>
    
    <listener>
        <listener-class>
            com.vaadin.example.gxt.companydashboard.server.MyServletContextListener
        </listener-class>
   </listener>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>CompanyDashboard.html</welcome-file>
    </welcome-file-list>
    </web-app>
